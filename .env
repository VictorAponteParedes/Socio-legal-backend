# ==========================================
# CONFIGURACIÓN DEL SERVIDOR
# ==========================================
PORT=3000
NODE_ENV=development

# ==========================================
# CONFIGURACIÓN DE BASE DE DATOS - POSTGRESQL
# ==========================================
# Host de la base de datos
DB_HOST=localhost

# Puerto de PostgreSQL (por defecto 5432)
DB_PORT=5432

# Nombre de usuario de PostgreSQL
DB_USERNAME=victoraponte

# Contraseña del usuario de PostgreSQL
DB_PASSWORD=Admin123.

# Nombre de la base de datos
DB_DATABASE=socio_legal

# ==========================================
# CONFIGURACIÓN DE TypeORM
# ==========================================
# Sincronización automática (solo en desarrollo)
# IMPORTANTE: Cambiar a 'false' en producción
DB_SYNCHRONIZE=true

# Logs de SQL queries (útil para debugging)
DB_LOGGING=true

# ==========================================
# CONFIGURACIÓN DE JWT (Autenticación)
# ==========================================
# Secreto para firmar tokens JWT
JWT_SECRET=tu_clave_secreta_super_segura_cambiame_en_produccion

# Tiempo de expiración del token (ejemplos: 1h, 7d, 30d)
JWT_EXPIRES_IN=7d

# ==========================================
# CONFIGURACIÓN DE CORS
# ==========================================
# URLs permitidas para CORS (separadas por comas)
CORS_ORIGIN=http://localhost:3000,http://localhost:19006,http://localhost:8081

# ==========================================
# CONFIGURACIÓN DE UPLOADS
# ==========================================
# Directorio para archivos subidos
UPLOAD_PATH=./uploads

# Tamaño máximo de archivo (en bytes) - 10MB
MAX_FILE_SIZE=10485760

# ==========================================
# OTRAS CONFIGURACIONES OPCIONALES
# ==========================================
# URL de la API
API_URL=http://localhost:3000

# Prefijo global para rutas de la API
API_PREFIX=api

# Rate limiting (peticiones por minuto)
THROTTLE_TTL=60
THROTTLE_LIMIT=100
